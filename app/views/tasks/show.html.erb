<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @task.content %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date.strftime('%A %e %B %Y') %>
</p>

<p>
  <strong>Completed:</strong>
  <%= @task.completed %>
</p>

<% if @task.user %>
<p>Assigned to: <%= @task.user.username %></p>
<% else %>
<p>Currently Unassigned</p>
<% end %>


<%= link_to 'Edit', edit_project_task_path %> |
<%= link_to 'Back', @project %>
<%= button_to  "Delete Task", project_task_path(@project, @task), method: :delete, data: { confirm: 'Are you sure you want to delete this task?' } %>
