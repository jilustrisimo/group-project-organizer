<%= form_for [@project, @task], html: {'project': @project.id} do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-field col s8">
    <%= f.text_field :title, 'data-length': '23', required: true %>
    <%= f.label :title %>
  </div>

  <div class="input-field col s4">
    <%= f.date_field :due_date, class: 'datepicker', required: true %>
    <%= f.label :due_date %>
  </div>

  <div class="input-field col s12">
    <%= f.text_area :content, class: 'materialize-textarea', 'data-length': '500', required: true %>
    <%= f.label :content %>
  </div>

  <div class="input-field col s1">
    <%= f.submit class: 'waves-effect waves-light btn teal accent-4' %>
    <br><br>
  </div>
<% end %>
