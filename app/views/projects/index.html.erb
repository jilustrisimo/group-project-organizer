<p id="notice"><%= notice %></p>

<h1 class="center">All Projects</h1>

  
    <% @projects.each do |project| %>
      <div class="card-panel hoverable">
        <%= link_to project do %>
        <div class="center-align">
          <h3 class="break"><b><%= project.title %></b></h3>
          <p><%= project.description %></p>

            <small class="left"><b>Due Date</b></small><br>
            <p class="left"><%= project.due_date.strftime('%A, %e %B %Y') %></p><br>

          <%- link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure you want to delete this project and all its tasks?' } %>
        </div>
      </div>
      <% end %>
    <% end %>


<br>

<%= link_to 'Create a Project', new_project_path %>
