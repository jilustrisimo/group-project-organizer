<p id="notice"><%= notice %></p>

<h1 class="center">All Projects</h1>

  
    <% @projects.each do |project| %>
      <%= link_to  project, {class: 'clickable-cells'} do %>
      <div class="sorted-projects center">
        
        <h3><b><%= project.title %></b></h3>
        <p><%= project.description %></p>
        <div class="left">
          <small><b>Due Date</b></small><br>
          <p><%= project.due_date.strftime('%A %e %B %Y') %></p>
        </div>
        <%- link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure you want to delete this project and all its tasks?' } %>
      </div>
      <% end %>
    <% end %>


<br>

